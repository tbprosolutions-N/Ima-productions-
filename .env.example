# SUPABASE_ACCESS_TOKEN=  (from https://supabase.com/dashboard/account/tokens, scope database:write)
# DATABASE_URL=  (from Project → Settings → Database → Connection string URI)
# GOOGLE_CALENDAR_WEBHOOK_URL=
